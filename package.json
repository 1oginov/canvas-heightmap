{
  "name": "canvas-heightmap",
  "version": "1.0.5",
  "description": "Canvas heightmap generator",
  "main": "src/CanvasHeighmap.js",
  "scripts": {
    "ci": "npm run lint && npm run test:coverage",
    "clean:coverage": "rm -rf coverage",
    "coveralls": "npm run test:coverage -- --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && npm run clean:coverage",
    "lint": "eslint src test",
    "test": "mocha",
    "test:coverage": "istanbul cover ./node_modules/mocha/bin/_mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/canvas-heightmap.git"
  },
  "keywords": [
    "canvas",
    "generator",
    "heightmap"
  ],
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loginov-rocks/canvas-heightmap/issues"
  },
  "homepage": "https://github.com/loginov-rocks/canvas-heightmap",
  "devDependencies": {
    "canvas": "^2.5.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.4",
    "eslint": "^6.0.0",
    "eslint-config-google": "^0.13.0",
    "istanbul": "^0.4.5",
    "jsdom": "^15.1.1",
    "mocha": "^6.1.4"
  }
}
